<?xml version="1.0"?>
<!DOCTYPE fontconfig SYSTEM "urn:fontconfig:fonts.dtd">
<fontconfig>
<match target="font">
  <test name="family" compare="eq" ignore-blanks="true">
    <string>Fira Code</string>
  </test>
  <edit name="fontfeatures" mode="append">
    <string>cv01</string>
    <string>cv06</string>
    <string>onum</string>
    <string>ss01</string>
    <string>ss03</string>
    <string>ss06</string>
    <string>ss07</string>
    <string>ss08</string>
    <string>zero</string>
  </edit>
</match>
</fontconfig>
